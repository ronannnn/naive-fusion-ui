{
  "name": "n-fusion-ui",
  "type": "module",
  "version": "0.0.4",
  "description": "A Vue 3 UI library",
  "author": "Ronan",
  "license": "MIT",
  "homepage": "https://github.com/ronannnn/fusion-ui",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ronannnn/fusion-ui.git"
  },
  "bugs": {
    "url": "https://github.com/ronannnn/fusion-ui/issues"
  },
  "keywords": [
    "ui",
    "vue",
    "accessibility",
    "nuxt",
    "components"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "style": "./dist/styles.css",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./constant": {
      "import": {
        "default": "./dist/constant.js"
      },
      "require": {
        "default": "./dist/constant.cjs"
      }
    }
  },
  "style": "./dist/styles.css",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "files": [
    "./LICENSE",
    "./dist",
    "package.json"
  ],
  "scripts": {
    "dev": "vite",
    "build": "pnpm type-check && pnpm build-only",
    "build-only": "vite build",
    "watch": "vite build --watch",
    "type-check": "vue-tsc -p tsconfig.check.json --noEmit",
    "type-gen": "vue-tsc --declaration  --emitDeclarationOnly",
    "test": "vitest",
    "test-update": "vitest -u",
    "pub:release": "pnpm publish --access public"
  },
  "peerDependencies": {
    "vue": ">= 3.5.0"
  },
  "dependencies": {
    "@better-scroll/core": "^2.5.1",
    "@better-scroll/mouse-wheel": "^2.5.1",
    "@ctrl/tinycolor": "^4.1.0",
    "@vueuse/core": "^11.0.3",
    "dayjs": "^1.11.13",
    "defu": "^6.1.4",
    "exceljs": "^4.4.0",
    "naive-ui": "^2.41.0",
    "nanoid": "^5.1.0",
    "pinia": "^2.2.2",
    "vue-draggable-plus": "^0.5.3",
    "vue-i18n": "^9.14.0"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^22.10.7",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "@vue/tsconfig": "^0.7.0",
    "lodash": "^4.17.21",
    "vite": "^6.0.11",
    "vite-plugin-dts": "^4.5.0",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.0"
  }
}
